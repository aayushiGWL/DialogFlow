<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_main_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/margin_24"
        android:padding="@dimen/margin_24"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:text="@string/lorem_ipsum"
        android:textColor="@color/content_grey"
        android:textSize="@dimen/text_20"
        app:layout_constraintBottom_toTopOf="@+id/iv_mic"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/iv_mic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/tap_to_start"
        app:layout_constraintBottom_toTopOf="@+id/txt_tap_to_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:borderWidth="0dp"
        android:layout_marginBottom="@dimen/margin_18"
        android:onClick="buttonChatClick"
        android:backgroundTint="@color/white"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icn_mic" />

    <TextView
        android:id="@+id/txt_tap_to_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16"
        android:fontFamily="@font/roboto"
        android:text="@string/tap_to_start"
        android:textColor="@color/fade_black"
        android:textSize="@dimen/text_20"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>